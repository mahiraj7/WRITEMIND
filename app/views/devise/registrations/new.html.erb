<div class="mx-auto text-2xl max-w-7xl px-4 py-4 sm:px-6 lg:px-8 py-4">
  <div class=" flex flex-col items-center justify-center">
    <%= image_tag 'logo.svg', class:"h-8 mt-5", alt:"Writemind Logo" %>

  <div  class="border border-black mt-10 rounded-lg flex flex-col items-center py-1 px-4">
    <h2 class="font-medium text-2xl mb-5 mt-3">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex flex-col my-4 text-xl min-w-96">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:" border border-black rounded-md focus:"%>
  </div>

  <div class="flex flex-col my-4 text-xl">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"border border-black rounded-md" %>
  </div>

  <div class="flex flex-col my-4 text-xl">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"border border-black rounded-md focus:"%>
  </div>

  <div class="flex flex-col items-center my-4 text-xl">
    <%= f.submit "Sign up", class:"mt-2 text-white bg-teal-700 hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-3 text-center" %>
  </div>
  <% end %>
  </div>
    <%= render "devise/shared/links" %>
  </div>
</div>

